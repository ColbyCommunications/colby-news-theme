<div class="{{ className }}">
	<div class="bg-[#EFEEE8] pt-8 pb-10 px-10 space-y-6">
        {% if title %}
            <h2 class="font-display text-3xl-minus-2">{{ title }}</h2>
        {% endif %}
        {% if image %}
            <div>{{ image }}</div>
        {% endif %}
        {% if body %}
            <div class="prose-figcaption">{{ body }}</div>
        {% endif %}
        {% if linkGroup %}
            <div>{{ linkGroup }}</div>
        {% endif %}
    </div>
</div>