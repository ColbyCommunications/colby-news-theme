{% if links is iterable and links.length > 0 %}
    <nav aria-label="Breadcrumb Links" class="breadcrumbs">
        {% apply spaceless %}
        <ol class="text-primary">
            {% for link in links %}
                <li class="inline {{ not loop.last ? 'after:content-slash after:mx-2' }}">
                    <a href="{{ link.url }}" class="underline decoration-dotted hocus:decoration-solid hocus:text-secondary {{ loop.first ? 'before:content-empty before:inline-block before:align-text-top before:mr-3 before:mask-home before:w-5 before:h-5 before:bg-current' }}
                    ">{{ link.title }}</a>
                </li>
            {% endfor %}
        </ol>
        {% endapply %}
    </nav>
{% endif %}