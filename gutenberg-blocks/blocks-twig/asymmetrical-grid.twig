<div class="{{ wrapperClasses }}">
    <div class="container w-full mx-auto">
        <div class="flex flex-col grid-cols-12 md:grid gap-9">
            <div class="
            {% if media %}
                {{ hideMedia ? 'col-span-12 lg:col-span-8 2xl:col-span-9' : 'col-span-7 lg:col-span-8 2xl:col-span-9' }}
            {% else %}
                col-span-12 lg:col-start-3 lg:col-end-11
            {% endif %}
            ">
                {{ content }}
            </div>
            {% if media %}
            <div class="col-span-8 lg:col-span-4 2xl:col-span-3 {{ hideMedia ? 'hidden lg:block' : '' }} {{ mediaSide == 'left' ? 'col-start-1 row-start-1' : '' }}">
                {{ media }}
            </div>
            {% endif %}
        </div>
    </div>
</div>