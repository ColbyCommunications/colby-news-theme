<div class="fact-cards">
    {% if title %}
        <div class="container mx-auto mb-6 md:mb-12 xl:mb-12 fact-cards__title px-container">
            <h2 class="font-serif text-3xl text-center sm:text-4xl md:text-5xl">{{ title }}</h2>
        </div>
    {% endif %}

    {% if cards is iterable %}
        <div class="relative py-8 background-wrapper xl:py-0 xl:pb-16">
            <div class="container relative z-10 mx-auto px-container">
                <div class="flex flex-col items-stretch justify-center -mx-2 -my-4 xl:-mx-4 xl:flex-row">
                    {% for card in cards %}
                        <div class="flex items-stretch py-4 xl:px-4 xl:w-1/3">
                            <div class="w-full p-6 bg-white border border-gray-300 shadow fact-card md:p-9">
                                <h3 class="mb-8 font-serif text-2xl md:text-3xl">{{ card.title }}</h3>
                                <div class="mb-8 prose">
                                    {{ card.body }}
                                </div>
                                {% if card.link.url %}
                                    <div>
                                        <a href="{{ card.link.url }}" class="inline-flex items-center text-lg font-bold leading-6 link-arrow group"><div class="block transition-colors border-b border-transparent group-hover:border-current">{{ card.link.title }}</div></a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="absolute bottom-0 left-0 right-0 z-0 w-full bg-gray-200 fact-cards__background-image">
                {{ backgroundImage }}
            </div>
        </div>
    {% endif %}
    
</div>