<div class="global-alert bg-tertiary" id="global-alert">
    <div class="container flex py-1 mx-auto space-x-3 px-container">
        {{ icon }}
        {% if url %} <a class="block py-1 font-semibold underline" href="{{ url }}">{{ title }}</a>
        {% else %}
            <div class="py-1 font-semibold">{{ title }}</div>
        {% endif %}
    </div>
</div>