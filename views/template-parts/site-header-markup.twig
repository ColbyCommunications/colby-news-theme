{# this is used in both `site-header.twig` and `modal.twig` #}

{# site-header.js controls the `selected:` state of these open-modal buttons #}
{% set openButtonClasses = 'bg-white p-2 rounded-lg group transition-colors selected:bg-gray-200 disabled:pointer-events-none' %}
{% set openSvgClasses = 'w-6 h-6 group-hover:scale-125 transform transition-transform' %}

<header
    {% if isRealHeader %}id="site-header"{% endif %}
    {#
        "StickyEvents" in site-header.js controls the `stuck:` state;
        works in SB, but it affects the DOM a bit, so we should make sure it works in WP too
    #}
    class="sticky top-0 z-20 bg-white site-header stuck:border-b stuck:border-gray-700"
>
    <div class="container">
        <div class="flex justify-between items-center py-5 {# for JS reasons, keep the y-padding on this div (not the header) #}">
            <a href="/" aria-label="Home">
                [[ site logo here ]]
            </a>
            <div class="space-x-1">
                <div class="inline-block cursor-pointer open-menu-wrapper">
                    <button class="open-menu {{ openButtonClasses }}" aria-label="Open menu (modal)">
                        <svg class="{{ openSvgClasses }}" aria-hidden="true" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M 3 5 A 1.0001 1.0001 0 1 0 3 7 L 21 7 A 1.0001 1.0001 0 1 0 21 5 L 3 5 z M 3 11 A 1.0001 1.0001 0 1 0 3 13 L 21 13 A 1.0001 1.0001 0 1 0 21 11 L 3 11 z M 3 17 A 1.0001 1.0001 0 1 0 3 19 L 21 19 A 1.0001 1.0001 0 1 0 21 17 L 3 17 z"/></svg>
                    </button>
                </div>
                <div class="inline-block cursor-pointer open-search-wrapper">
                    <button class="open-search {{ openButtonClasses }}" aria-label="Open search (modal)">
                        <svg class="{{ openSvgClasses }}" aria-hidden="true" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg"><path d="M 20.5 6 C 12.509634 6 6 12.50964 6 20.5 C 6 28.49036 12.509634 35 20.5 35 C 23.956359 35 27.133709 33.779044 29.628906 31.75 L 39.439453 41.560547 A 1.50015 1.50015 0 1 0 41.560547 39.439453 L 31.75 29.628906 C 33.779044 27.133709 35 23.956357 35 20.5 C 35 12.50964 28.490366 6 20.5 6 z M 20.5 9 C 26.869047 9 32 14.130957 32 20.5 C 32 23.602612 30.776198 26.405717 28.791016 28.470703 A 1.50015 1.50015 0 0 0 28.470703 28.791016 C 26.405717 30.776199 23.602614 32 20.5 32 C 14.130953 32 9 26.869043 9 20.5 C 9 14.130957 14.130953 9 20.5 9 z"/></svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>