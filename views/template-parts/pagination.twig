{% if pagination and pagination.pages is iterable %}
    <nav role="navigation" aria-label="pagination" class="flex justify-center space-x-4 font-bold flex-nowrap">
        {% if pagination.prev %}
            <a href="{{ pagination.prev.link }}" class="{{ pagination.prev.class }} block text-primary-light hocus:underline">
                <span role="presentation">&lt;&lt;</span>
                Previous
            </a>
        {% endif %}
        <ul class="justify-center hidden space-x-4 pages sm:flex flex-nowrap">
            {% for page in pagination.pages %}
                <li>
                    {% if page.current %}
                        <span>{{ page.title }}</span>
                    {% else %}
                        <a class=" text-primary-light hocus:underline" href="{{ page.url }}">{{ page.title }}</a>
                    {% endif %}
                </li>
                {% if page.beforeBreak %}
                    <li role="presentation">
                        <div>â€¦</div>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
        {% if pagination.next %}
            <a href="{{ pagination.next.link }}" class="{{ pagination.next.class }} lock text-primary-light hocus:underline">
                Next
                <span role="presentation">&gt;&gt;</span>
            </a>
        {% endif %}
    </nav>
{% endif %}