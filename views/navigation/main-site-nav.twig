{% set menu = menu|default(menu_primary) %}

<nav id="site-navigation" class="main-navigation">
    <button class="menu-toggle" aria-controls="menu-{{ menu.id }}" aria-expanded="false">
        {{ __('Primary Menu', 'colby-news-theme') }}
    </button>
    <div class="menu-primary-container">
        <ul id="menu-{{ menu.id }}" class="menu nav-menu" aria-expanded="false">
            {% for item in menu.items %}
                <li id="menu-{{ menu.id }}-{{ item.slug }}" class="{{ item.classes|join(' ') }}">
                    <a href="{{ item.link }}"
                    {{ item.current ? 'aria-current="page"' : '' }}
                    >
                    {{ item.title }}
                </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</nav><!-- #site-navigation -->